  <section class="container my-4">
    <div class="row">
        <div class="col-md-6">
          <!-- Sleep Rating Card -->
          <div class="card">
            <div class="card-body text-center">
              <h2 class="card-title">Rate Your Sleep (1 to 5)</h2>
              <form id="sleep-form">
                <div class="form-group">
                  <label for="sleep-date">Select Date:</label>
                  <input type="date" class="form-control" id="sleep-date" value="<%= new Date().toISOString().substr(0, 10) %>" required>
                </div>
                <div class="form-group">
                  <label for="sleep-time">Select Time:</label>
                  <input type="time" class="form-control" id="sleep-time" value="<%= new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>" required>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="sleepRating" id="sleep-rating-1" value="1">
                  <label class="form-check-label" for="sleep-rating-1">1</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="sleepRating" id="sleep-rating-2" value="2">
                  <label class="form-check-label" for="sleep-rating-2">2</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="sleepRating" id="sleep-rating-3" value="3">
                  <label class="form-check-label" for="sleep-rating-3">3</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="sleepRating" id="sleep-rating-4" value="4">
                  <label class="form-check-label" for="sleep-rating-4">4</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="sleepRating" id="sleep-rating-5" value="5">
                  <label class="form-check-label" for="sleep-rating-5">5</label>
                </div>
                <div class="mt-3">
                  <p id="sleep-selected">You rated: <span id="sleep-value">N/A</span></p>
                </div>
                <button type="submit" class="btn btn-primary">Submit Sleep Rating</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <!-- Stress Rating Card -->
          <div class="card">
            <div class="card-body text-center">
              <h2 class="card-title">Rate Your Stress (1 to 5)</h2>
              <form id="stress-form">
                <div class="form-group">
                  <label for="stress-date">Select Date:</label>
                  <input type="date" class="form-control" id="stress-date" value="<%= new Date().toISOString().substr(0, 10) %>" required>
                </div>
                <div class="form-group">
                  <label for="stress-time">Select Time:</label>
                  <input type="time" class="form-control" id="stress-time" value="<%= new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>" required>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="stressRating" id="stress-rating-1" value="1">
                  <label class="form-check-label" for="stress-rating-1">1</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="stressRating" id="stress-rating-2" value="2">
                  <label class="form-check-label" for="stress-rating-2">2</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="stressRating" id="stress-rating-3" value="3">
                  <label class="form-check-label" for="stress-rating-3">3</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="stressRating" id="stress-rating-4" value="4">
                  <label class="form-check-label" for="stress-rating-4">4</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="stressRating" id="stress-rating-5" value="5">
                  <label class="form-check-label" for="stress-rating-5">5</label>
                </div>
                <div class="mt-3">
                  <p id="stress-selected">You rated: <span id="stress-value">N/A</span></p>
                </div>
                <button type="submit" class="btn btn-danger">Submit Stress Rating</button>
              </form>
            </div>
          </div>
        </div>
      </div>
