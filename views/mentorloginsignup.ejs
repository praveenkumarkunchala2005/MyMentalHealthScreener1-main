    <style>
      /* Center the login box */
      .login-box {
          width: 100%;
          max-width: 400px;
          margin: 0 auto;
      }
  
      /* Add background color to the card */
      .card {
          background-color: #fff;
          box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      }
  
      /* Responsive styles for the form elements */
      .login-snip {
          padding: 20px;
          text-align: left;
      }
  
      .group {
          margin-bottom: 20px;
      }
  
      .label {
          color: #ccc;
          font-size: 16px;
      }
  
      .input {
          width: 100%;
          padding: 10px;
          border: none;
          border-radius: 5px;
          background: rgba(255, 255, 255, 0.2);
          font-size: 16px;
      }
  
      .input::placeholder {
          color: #b3b3b3;
      }
  
      /* Style for both login and signup buttons */
      .button {
          width: 100%;
          padding: 15px;
          border: none;
          border-radius: 5px;
          background: #1161ee;
          color: #fff;
          font-size: 16px;
          cursor: pointer;
          transition: background-0.3s;
      }
  
      /* Change button background on hover */
      .button:hover {
          background: #0d50bf;
      }
  
      /* Hide the signup form initially */
      .sign-up-form {
          display: none;
      }
  
      /* Display the signup form when the signup radio button is checked */
      input[type="radio"].sign-up:checked ~ .login-snip .sign-up-form {
          display: block;
      }
  
      /* Display the login form when the login radio button is checked */
      input[type="radio"].sign-in:checked ~ .login-snip .login-form {
          display: block;
      }
  
      /* Style for radio buttons */
      .tab {
          display: inline-block;
          cursor: pointer;
          padding: 10px 20px;
          border: 2px solid #1161ee;
          border-radius: 5px;
          font-size: 16px;
          color: #1161ee;
          margin-right: 10px;
          transition: background-0.3s, color 0.3s;
      }
  
      /* Style for the selected radio button */
      .tab:checked {
          background: #1161ee;
          color: #fff;
      }
  
      /* Additional responsive styles */
      @media (max-width: 768px) {
          .login-snip {
              padding: 15px;
          }
  
          .input {
              padding: 8px;
          }
  
          .button {
              padding: 12px;
          }
      }
  </style>
</head>

