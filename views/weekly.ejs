    <script>
        // Get all the radio buttons
        const radioButtons = document.querySelectorAll('input[type="radio"]');
        
        // Add event listener to the submit button
        const submitButton = document.querySelector('button[type="submit"]');
        submitButton.addEventListener('click', calculateScore);

        // Function to calculate and display the PHQ09 score
        function calculateScore() {
            let score = 0;

            // Loop through the radio buttons and calculate the score based on their values
            radioButtons.forEach((radioButton) => {
                if (radioButton.checked) {
                    score += parseInt(radioButton.value);
                }
            });

            // Display the calculated score
            alert(`Your PHQ-9 score is: ${score}`);
        }
